<div class="container">
  <h4>Vos dern√®res transactions</h4>
  <div class="table-responsive">
    <table class="table table-striped table-md">
      <thead>
        <tr>
          <th>Type de transaction</th>
          <th>Livre</th>
          <th>Date de transaction</th>
        </tr>
      </thead>
      <tbody>
        <% for (const update of history.slice(-200).reverse()) { %>
          <tr>
            <td><%= update.action === 'WITHDRAW' ? 'Retrait' : 'Retour' %></td>
            <td><span class="font-weight-bold"><%= update.book.title %></span> de <%= update.book.author %></td>
            <td><%= moment(update.date).format('HH:mm [le] DD/MM/YYYY') %> (<%= moment(update.date).locale('fr').fromNow() %>)</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
