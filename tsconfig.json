{
  "compilerOptions": {
    "incremental": false,
    "target": "es5",
    "allowJs": false,
    "outDir": "./build",
    "removeComments": true,
    "strict": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // "declaration": true,
    // "types": []
  },
  "include": [
    "./src/**/*"
  ],
  "files": [
    "./src/types/serialport.d.ts"
  ]
}
